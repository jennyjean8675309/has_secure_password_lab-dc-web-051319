<h1>Sign Up Form</h1>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.label "Please confirm your password" %>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit "Submit" %> 
<% end %>